<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarPin"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/purple_200"
        android:title="Enter Admin PIN"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- "Enter PIN" label -->
    <TextView
        android:id="@+id/tvEnterPinLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter PIN"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarPin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- PIN boxes container -->
    <LinearLayout
        android:id="@+id/pinContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvEnterPinLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- PIN digit 1 -->
        <EditText
            android:id="@+id/pin1"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/pin2"
            android:textAlignment="center"/>

        <!-- PIN digit 2 -->
        <EditText
            android:id="@+id/pin2"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/pin3"
            android:textAlignment="center"/>

        <!-- PIN digit 3 -->
        <EditText
            android:id="@+id/pin3"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/pin4"
            android:textAlignment="center"/>

        <!-- PIN digit 4 -->
        <EditText
            android:id="@+id/pin4"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/pin5"
            android:textAlignment="center"/>

        <!-- PIN digit 5 -->
        <EditText
            android:id="@+id/pin5"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:maxLength="1"
            android:imeOptions="actionDone"
            android:nextFocusForward="@+id/btnPinOk"
            android:textAlignment="center"/>
    </LinearLayout>

    <!-- OK Button -->
    <Button
        android:id="@+id/btnPinOk"
        android:layout_width="106dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/purple_500"
        android:text="OK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pinContainer" />
</androidx.constraintlayout.widget.ConstraintLayout>
